<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainBorderPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Clientes.DashboardClienteController">

    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200.0" spacing="15.0" style="-fx-background-color: #435161;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>

            <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="BIENVENIDO al Banco UQ" />
            <Label fx:id="lblNombreUsuario" style="-fx-text-fill: #9DB5C9;" text="[Nombre de Usuario]" />

            <Separator prefWidth="200.0" />

            <Button mnemonicParsing="false" onAction="#onRealizarTransferencias" prefWidth="180.0" style="-fx-background-color: #9DB5C9; -fx-background-radius: 10;" text="Transferencias">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Button>
            <Button mnemonicParsing="false" onAction="#cargarConsultarCuentas" prefWidth="180.0" style="-fx-background-color: #9DB5C9; -fx-background-radius: 10;" text="Mis Cuentas">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Button>

            <VBox VBox.vgrow="ALWAYS" /> <Button mnemonicParsing="false" onAction="#cerrarSesion" prefWidth="180.0" style="-fx-background-color: #E84A5F; -fx-background-radius: 10;" text="Cerrar Sesión">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Button>
        </VBox>
    </left>

    <center>
        <AnchorPane fx:id="contentPane" BorderPane.alignment="CENTER">
            <Label layoutX="20.0" layoutY="20.0" text="Selecciona una opción del menú lateral." />
        </AnchorPane>
    </center>
</BorderPane>
