<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #F8F8F8;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Clientes.TransaccionesViewController">
    <children>
        <Text layoutX="32.0" layoutY="59.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Nueva Transferencia" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="30.0">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Text>

        <GridPane layoutX="100.0" layoutY="120.0" prefHeight="250.0" prefWidth="400.0" vgap="20.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="100.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <Label style="-fx-font-weight: bold;" text="Cuenta de Origen:" />
            <ComboBox fx:id="cmbCuentaOrigen" prefWidth="250.0" promptText="Seleccione su cuenta" GridPane.columnIndex="1" />

            <Label style="-fx-font-weight: bold;" text="Cuenta Destino:" GridPane.rowIndex="1" />
            <TextField fx:id="txtCuentaDestino" promptText="Ingrese el nÃºmero de cuenta" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label style="-fx-font-weight: bold;" text="Monto a Transferir ($):" GridPane.rowIndex="2" />
            <TextField fx:id="txtMonto" promptText="Ej: 500.00" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label style="-fx-font-weight: bold;" text="Concepto:" GridPane.rowIndex="3" />
            <TextField fx:id="txtConcepto" promptText="Ej: Pago de arriendo" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        </GridPane>

        <Button fx:id="btnTransferir" layoutX="425.0" layoutY="420.0" mnemonicParsing="false" onAction="#onRealizarTransferencia" prefHeight="35.0" prefWidth="170.0" style="-fx-background-color: #435161; -fx-text-fill: white; -fx-font-weight: bold;" text="Transferir Fondos" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="420.0">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>

    </children>
</AnchorPane>
