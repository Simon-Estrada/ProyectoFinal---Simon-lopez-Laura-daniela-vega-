<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="594.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Cajeros.ConsultaSaldoController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="97.0" layoutY="149.0" prefWidth="400.0" spacing="20.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Consulta tu saldo">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Text>

                <Label text="Número de cuenta:" />
                <TextField fx:id="txtCuenta" promptText="Ingrese el número de cuenta" />

                <Button fx:id="btnConsultar" mnemonicParsing="false" onAction="#onConsultarSaldo" style="-fx-background-color: #305CDE;" text="Consultar Saldo" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <effect>
                  <DropShadow blurType="ONE_PASS_BOX" />
               </effect></Button>

                <Label text="Saldo disponible:" />
                <Label fx:id="lblSaldo" text="0.00">
                    <font>
                        <Font name="System Bold" size="57.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </children>
</AnchorPane>
